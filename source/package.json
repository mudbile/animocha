{
  "name": "animocha",
  "version": "0.0.3",
  "description": "A simple dual-subtitle video player inspired by Animelon.",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mudbile/animocha.git"
  },
  "author": "Daniel Dowsett",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/mudbile/animocha/issues"
  },
  "homepage": "https://github.com/mudbile/animocha#readme",
  "dependencies": {
    "child_process": "^1.0.2",
    "node": "^16.1.0"
  },
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^22.11.7",
    "electron-reload": "^1.5.0",
    "typescript": "^4.2.4"
  },
  "build": {
    "appId": "neauangle.animocha",
    "productName": "Animocha",
    "copyright": "Copyright Â© 2021 ${author}",
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "extraFiles": [
      "ffmpeg.exe",
      "ffprobe.exe"
    ]
  }
